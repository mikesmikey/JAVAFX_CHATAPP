<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="searchPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onMouseDragged="#addfpaneMove" onMousePressed="#addfpanePressed" prefHeight="150.0" prefWidth="300.0" style="-fx-background-color: #3f3f3f;" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="300.0" spacing="10.0">
               <children>
                  <ImageView fx:id="SearchboxImage" fitHeight="75.0" fitWidth="75.0" pickOnBounds="true" />
                  <VBox prefWidth="48.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="SearchboxNameLabel" text="Name" textFill="WHITE">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="SearchboxUsernameLabel" text="Username" textFill="#c9c9c9">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="28.0" prefWidth="300.0" spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="addFriendButton" mnemonicParsing="false" onAction="#addFriendButtonAction" prefHeight="40.0" prefWidth="80.0" styleClass="menu-close-button" stylesheets="@application.css" text="เพิ่ม" />
                  <Button fx:id="searchCloseButton" mnemonicParsing="false" onAction="#searchCloseButtonAction" prefHeight="40.0" prefWidth="80.0" styleClass="menu-button" stylesheets="@application.css" text="ยกเลิก" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
